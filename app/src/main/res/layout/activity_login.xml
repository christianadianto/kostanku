<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="entre2.house_home.kostanku.LoginActivity"
    android:background="#42A5F5"
    android:id="@+id/loginPage"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loginTopLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textColor="#fff"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/tvSignin"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/border_white"
        android:layout_marginTop="40dp"
        android:padding="30dp"
        android:id="@+id/loginFormLayout"
        android:layout_below="@+id/loginTopLayout"
        >
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_email"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textColorHint="#BBDEFB">
            <EditText
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtEmail"
                android:hint="Email"
                android:drawableRight="@drawable/ic_mail"
                android:textSize="15dp"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_password"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_layout_email"
            android:textColorHint="#BBDEFB">
            <EditText
                android:layout_width="260dp"
                android:inputType="textPassword"
                android:layout_height="wrap_content"
                android:id="@+id/txtPassword"
                android:layout_marginBottom="40dp"
                android:hint="Password"
                android:drawableRight="@drawable/ic_lock"
                android:textSize="15dp"/>
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginFormLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dont have an account?"
            android:id="@+id/dontHaveAccount"
            android:textColor="#BBDEFB"
            android:textSize="16dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:id="@+id/linkSignup"
            android:layout_toEndOf="@+id/dontHaveAccount"
            android:layout_marginLeft="5dp"
            android:textSize="16dp"/>
    </RelativeLayout>


    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnSignin"
        android:text="Sign In"
        android:textSize="20dp"
        android:layout_below="@id/loginFormLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-25dp"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:background="@drawable/ripple_transparent_border_fill" />
</RelativeLayout>
